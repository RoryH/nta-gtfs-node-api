{
  "compilerOptions": {
    "lib": ["es2021"],
    "module": "esnext",
    "target": "esnext",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ],
  },
  "include": [
    "./src",
  ]
}
